<% provide(:title, "Profile Edit") %>

<div class="form-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h1 class="text-center">プロフィール編集ページ</h1>

        <%= form_for current_user, url: profile_update_path do |f| %>
          <%= render "shared/error_messages", object: f.object %>

          <div class="form-group">
            <%= f.label :user_name, "ユーザーネーム" %>
            <%= f.text_field :user_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :profile, "自己紹介" %>
            <%= f.text_field :profile, class: "form-control" %>
          </div>


          <div class="form-group">
            <%= f.submit "更新", class: "btn-block btn-primary" %>
          </div>
        <% end %>

        <%= link_to "メールアドレス、又はパスワードを変更する場合",
          edit_user_registration_path %>
      </div>
    </div>
  </div>
</div>
