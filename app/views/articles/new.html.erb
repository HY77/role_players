<% provide(:title, "Create Article") %>

<div class="form-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <h1 class="text-center">記事作成ページ</h1>

        <%= form_for @artcle do |f| %>
        <%= render "shared/error_messages" %>

        <div class="form-group">
          <%= f.label :article_title, "記事タイトル" %>
          <%= f.text_field :article_title, class: "form-control %>
        </div>

        <div class="form-group">
          <%= f.fields_for :image do |img| %>
            <%= img.label :image, '選手画像' %>
            <%= img.file_field :image%>
            <%= img.hidden_field :id, value: img.object.id %>
          <% end %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
