<ul class="articles-info">
  <% @articles.each do |article| %>
    <% if article.released? %>
      <%= render partial: "articles/article", locals: { article: article } %>
    <% elsif current_user?(@user) %>
      <%= render partial: "articles/article", locals: { article: article } %>
    <% end %>
  <% end %>
</ul>
