<div class="jumbotron comment-area">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <%= icon("fas","comment-dots", class: "comment-icon") %>
        <p class="comment-icon-text">コメント</p>
      </div>

      <div class="col-md-offset-1 col-md-10">
        <% @article.comments.each do |comment| %>
          <div class="comment-user">
            <%= image_tag comment.user.image.url, class: "comment-user-image" %>
            <%= link_to comment.user.user_name, user_path(comment.user), class: "comment-user-name" %>

            <p class="comment-content"><%= simple_format(comment.content) %></p>
          </div>

        <% end %>
      </div>
      <div class="col-md-offset-1 col-md-10 comment-info">
        <% if user_signed_in? %>
          <h4>コメントする</h4>
          <%= render "comments/comment_form" %>
        <% else %>
          <h4 class="text-center comment-reminder">コメントしてみよう！</h4>
          <button class="btn btn-primary center-block comment-signup">
            <%= link_to "サインアップ", new_user_registration_path %>
          </button>

          <h5 class="text-center comment-login-text">
            すでにアカウントをお持ちの方は<%= link_to "こちら", new_user_session_path %>
          </h5>
        <% end %>
      </div>
    </div>
  </div>
</div>
