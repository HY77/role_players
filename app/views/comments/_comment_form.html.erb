<%= form_for @comment do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.text_area :content, size: "10x10", placeholder: "コメントを入力してください",
      class: "form-control" %>

    <%= f.hidden_field :id, value: params[:id] %>
  </div>

  <div class="form-group">
    <%= f.submit "投稿する", class: "btn-block btn-primary" %>
  </div>
<% end %>
